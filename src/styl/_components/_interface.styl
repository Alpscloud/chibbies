			right auto !important

		
@keyframes coinLevitation
	0%
		transform translateY(-10px)
	50%
		transform translateY(10px)
	100%
		transform translateY(-10px)
		
.comet
	display inline-block
	width 31px
	height 31px
	background linear-gradient(140.1deg, #78C2E1 -16.79%, #FFD25E 44.96%, #DC5ACF 78.42%)
	position absolute
	border-radius 50%
	filter blur(5px)
	&-lg
		width 70px
		height 70px
		


	
.comet-tale
	display inline-block
	position absolute
	z-index 1
	background url('../img/decor/comment-lg.png') 50% no-repeat / contain
	width 152px
	height 116px
	&-sm
		width 100px
		height 76px
		background-image 	url('../img/decor/comment-sm.png')
		
	&-1
		right 100%
		bottom 360px
	&-2
		bottom -270px
		right -100px
	&-3
		
		right -80px
		bottom 180px


.characters
	.coin
		bottom -300px !important
		right -220px !important
		top auto !important
		left auto !important
		

.circles
	display block
	border-radius 50%
	background rgba(13, 15, 67, 0.018)
	background linear-gradient(142.53deg, rgba(60, 65, 215, 0.015) 11.8%, rgba(13, 15, 67, 0.018) 88.04%)
	box-shadow -1px 21px 41px rgba(0, 0, 0, 0.06), inset -1px -1px 1px rgba(0, 0, 0, 0.09), inset 1px 1px 1px rgba(255, 255, 255, 0.39)
	backdrop-filter blur(144px)
	position absolute
	z-index -1
	width 338px
	height 338px
	pointer-events none
	&:before
		pseudo()
		position absolute
		z-index 1
		position-center()
		border-radius 50%
		width 200px
		height 200px
		background rgba(0,0,0, 0.45)
		background linear-gradient(142.53deg, rgba(93, 98, 231, 0.05) 11.8%, rgba(17, 21, 148, 0.06) 88.04%)
		box-shadow inset -1px -1px 1px rgba(0, 0, 0, 0.09), inset 1px 1px 1px rgba(255, 255, 255, 0.49)
		backdrop-filter blur(144px)
		
	&-sm
		width 208px
		height 208px
		&:before
			width 123px
			height 123px