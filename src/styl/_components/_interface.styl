.coin
	display inline-block
	background-repeat no-repeat
	background-size contain
	background-position 50%
	position absolute
	z-index -2
	animation-direction alternate
	animation-timing-function linear
	animation-iteration-count infinite
	animation-duration 5s
	animation-name coinLevitation
	top 50% !important
	left 50% !important
	bottom auto !important
	right auto !important
	opacity 0
	transition all 1s ease
	&-lg
		background-image url('../img/decor/coins/coin-lg.png')
		width 327px
		height 327px
		animation-duration 5s
		opacity 1
		
	&-1
		width 210px
		height 210px
		background-image url('../img/decor/coins/coin1.png')
		z-index 1
		animation-duration 6s
		
	&-2
		width 337px
		height 337px
		background-image url('../img/decor/coins/coin2.png')
		// z-index -2
		z-index 1
		animation-duration 4s
		
	&-3
		width 154px
		height 154px
		background-image url('../img/decor/coins/coin3.png')
		animation-duration 4.5s
		
	&-4
		width 153px
		height 153px
		background-image url('../img/decor/coins/coin4.png')
		animation-duration 3.5s
		
	&-5
		width 265px
		height 265px
		background-image url('../img/decor/coins/coin5.png')
		z-index 1
		animation-duration 6.5s
		
	&-6
		width 288px
		height 288px
		background-image url('../img/decor/coins/coin6.png')
		z-index 1
		animation-duration 5s
		
	&-7
		width 153px
		height 153px
		background-image url('../img/decor/coins/coin7.png')
		animation-duration 3.5s
		
	&-8
		width 153px
		height 153px
		background-image url('../img/decor/coins/coin8.png')
		animation-duration 5s
		
	&-9
		width 350px
		height 350px
		background-image url('../img/decor/coins/coin9.png')
		animation-duration 6s



		
