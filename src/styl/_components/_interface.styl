			left auto !important
			bottom auto !important

			
		&-5
			top -180px !important
			left -20px !important
			right auto !important
			bottom auto !important

			
		&-6
			right -60px !important
			top -125px !important
			left auto !important
			bottom auto !important

			
		&-7
			top 50% !important
			left -95px !important
			right auto !important
			bottom auto !important
			
			
