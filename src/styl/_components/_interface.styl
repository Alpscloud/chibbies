			left -250px !important
			bottom -100px !important
			top auto !important
			right auto !important

		
@keyframes coinLevitation
	0%
		transform translateY(-10px)
	50%
		transform translateY(10px)
	100%
		transform translateY(-10px)
		
.comet
	display inline-block
	width 31px
	height 31px
	background linear-gradient(140.1deg, #78C2E1 -16.79%, #FFD25E 44.96%, #DC5ACF 78.42%)
	position absolute
	border-radius 50%
	filter blur(5px)
	&-lg
		width 70px
		height 70px
		


	
		


