

.form
	&-input
		display block
		flex 1
		margin-right 20px
		padding 21px
		text-align center
		background-color rgba(255, 255, 255, 0.1)
		border 2px solid transparent
		font 20px $Med
		color $basic-white-color
		border-radius 14px
		&:hover,
		&:focus
			border-color $accent-color
		&::-webkit-input-placeholder
			font 20px $Med
			color rgba(255, 255, 255, 0.4)
		&::-moz-placeholder
			font 20px $Med
			color rgba(255, 255, 255, 0.4)
		&:-moz-placeholder
			font 20px $Med
			color rgba(255, 255, 255, 0.4)
		&:-ms-input-placeholder
			font 20px $Med
			color rgba(255, 255, 255, 0.4)
			
	
			
	
	



