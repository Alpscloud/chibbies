.btn
	display inline-block
	position relative
	text-align center
	font 14px $Bold
	color $dark-text-color
	line-height 1
	z-index 1
	
	span
		border-radius 3px
		background-color $accent-color
		transition all .17s ease-in-out
		backface-visibility hidden
		
		padding 12px 15px
		position relative
		width 100%
		display block
		z-index 1
	&:before
		pseudo()
		position absolute
		height calc(100% + 6px)
		width calc(100% + 6px)
		top -2px
		left -3px
		background-color $dark-color
		z-index -1
		border-radius 5px
		transition background-color .17s ease-in-out
		
	&:hover
		span
			background-color $basic-white-color
			
	&-transparent
		
		&:before
			display none
		span
			color $accent-color
			background-color transparent
			border 2px solid $accent-color
			border-radius 9px
			
		&:hover
			span
				color $dark-text-color
				border-color $dark-text-color
			
	&-arrow
		span
			width 50px
			height 50px
			svg
				svg()
				width 18px
				height 18px
				position absolute
				position-center()
				z-index 1
				fill $dark-color
	
	&-lg
		font-size 20px
		width 100%
		max-width 210px
		span
			padding 17px
		&:before
			height calc(100% + 8px)
			width calc(100% + 8px)
			top -3px
			left -4px
			
	&-light
		color $alternate-color
		span
			background-color $basic-white-color
		&:before
			background-color $alternate-color
			
		&:hover
			color $basic-white-color
			span
				background-color $alternate-color
		
			
	

	

	&-hamburger
		display none
		flex none
		width 30px
		height 30px
		position absolute
		z-index 92
		vertical-center()
		right 16px
		span
			width 24px
			height 2px
			border-radius 40px
			background-color $basic-white-color
			display block
			position absolute
			top 50%
			left 3px
			transition all 0.3s ease-in-out	
			&:nth-child(1)
				width 17px
				margin-top -3px
			&:nth-child(2)
				margin-top 3px
		&.is-active
			span
				&:nth-child(1)
					width 24px
					transform translateY(3px) rotate(45deg)
				&:nth-child(2)
					transform translateY(-3px) rotate(-45deg)
		