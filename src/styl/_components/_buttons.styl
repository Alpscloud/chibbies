.btn
	display inline-block
	position relative
	text-align center
	font 14px $Bold
	color $dark-text-color
	line-height 1
	z-index 1
	
	span
		height 100%
		border-radius 9px
		background-color $accent-color
		transition all .17s ease-in-out
		backface-visibility hidden
		
		padding 15px
		position relative
		width 100%
		display flex
		justify-content center
		align-items center
		z-index 1
	
		
	&:hover
		span
			background-color $basic-white-color
			
	&-transparent
		
		&:before
			display none
		span
			color $accent-color
			background-color transparent
			border 2px solid $accent-color
			border-radius 9px
			padding-top 13px
			padding-bottom 13px
			
		&:hover
			span
				color $dark-text-color
				border-color $dark-text-color
			
	&-arrow
		span
			width 50px
			height 50px
			svg
				svg()
				width 18px
				height 18px
				position absolute
				position-center()
				z-index 1
				fill $dark-color
	
	&-lg
		font-size 20px
		width 100%
		max-width 230px
		box-shadow 0px 4px 54px rgba(241, 184, 35, 0.75)
		span
			padding 22.5px 10px
			
	&-discord
		box-shadow 0px 4px 23px rgba(0, 0, 0, 0.25)
		span
			display flex
			align-items center
			flex-wrap nowrap
		
		
		svg
			display block
			width 46px
			height 34px
			fill $discord-color 
			flex none
			transition fill .17s ease-in-out
			margin-right 20px
		
			
	&-light
		color #131A6D
		span
			background-color $basic-white-color
		
			
		&:hover
			
			span
				background-color $accent-color
		
			
	

	

	&-hamburger
		display none
		flex none
		width 30px
		height 30px
		position absolute
		z-index 92
		vertical-center()
		right 16px
		span
			width 24px
			height 2px
			border-radius 40px
			background-color $basic-white-color
			display block
			position absolute
			top 50%
			left 3px
			transition all 0.3s ease-in-out	
			&:nth-child(1)
				width 17px
				margin-top -3px
			&:nth-child(2)
				margin-top 3px
		&.is-active
			span
				&:nth-child(1)
					width 24px
					transform translateY(3px) rotate(45deg)
				&:nth-child(2)
					transform translateY(-3px) rotate(-45deg)
		