.btn
	display inline-block
	position relative
	text-align center
	font 14px $Bold
	color $dark-text-color
	line-height 1
	z-index 1
	span
		border-radius 3px
		background-color $accent-color
		transition all .17s ease-in-out
		backface-visibility hidden
		
		padding 12px 15px
		position relative
		width 100%
		display block
		z-index 1
	&:before
		pseudo()
		position absolute
		height calc(100% + 6px)
		width calc(100% + 6px)
		top -2px
		left -3px
		background-color $dark-color
		z-index -1
		border-radius 5px
		transition background-color .17s ease-in-out
		
	&:hover
		span
			background-color $basic-white-color
			
	&-arrow
		span
			width 50px
			height 50px
			svg
				svg()
				width 18px
				height 18px
				position absolute
				position-center()
				z-index 1
				fill $dark-color
	
	&-lg
		font-size 20px
		width 100%
		max-width 210px
		span
			padding 17px
		&:before
			height calc(100% + 8px)
			width calc(100% + 8px)
			top -3px
			left -4px
			
	&-light
		color $alternate-color
		span
			background-color $basic-white-color
		&:before
			background-color $alternate-color
			
		&:hover
			color $basic-white-color
			span
				background-color $alternate-color
		
			
	
		
	&-close
		display inline-block
		width 20px
		height 20px
		background url('../img/icons/svg/close-ic.svg') center center no-repeat
		background-size 20px 20px
		
	

	&-hamburger
		display inline-block
		flex none
		width 50px
		height 50px
		border-radius 50%
		background-color $accent-color
		position relative
		transition background-color .17s ease-in-out
		margin-left 15px
		&__line
			width 27px
			height 2px
			background-color $basic-black-color
			display block
			margin 6px auto
			transition all 0.3s ease-in-out	
		&.is-active
			.btn__hamburger--line
				&:nth-child(1)
					transform translateY(8px) rotate(45deg)
				&:nth-child(2)
					opacity 0	
				&:nth-child(3)
					transform translateY(-8px) rotate(-45deg)
		