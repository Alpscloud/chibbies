		background #2C3BFA
		background linear-gradient(99.99deg, #424EE4 1.11%, #2C3BFA 100%)
		border-radius 34px
		padding 35px 80px
		
	&-text
		width 330px
		flex none
		
		.sect-title
			font-size 40px
			line-height 49px
			margin-bottom 15px
			
		p
			font-size 16px
			margin-bottom 30px
		
	&-img
		flex 1
		display flex
		justify-content center
		img
			display block
			max-width 305px
			
// roadmap
.sect__roadmap
	
	position relative
	.sect-title
		margin-bottom 70px
		
	&:before
		pseudo()
		position absolute
		top 0
		left 0
		width 100%
		height 100%
		background url('../img/backgrounds/roadmap-bg.svg') center bottom -150px no-repeat
		mix-blend-mode luminosity
	

		
	.container
		position relative
		z-index 2
	
.roadmap-inner
	background url('../img/backgrounds/roadmap-bottom-bg.png') center bottom -100px no-repeat
	height 100%
	
	
.roadmap
	padding-left 90px
	padding-right 90px
	padding-bottom 180px
	position relative
	&-wrapper
		position relative
		.comet
			&-1
				bottom -430px
				left 200px
			&-2
				bottom 540px
				right 160px
	&:before
		pseudo()
		width 2035px
		height 1820px
		background url('../img/decor/roadmap-shine.svg') no-repeat 50% / contain
		position absolute
		top 0
		right -500px
		z-index -2
	
		
	&-step
		margin-bottom 20px
		background rgba(0,0,0, .3)
		background linear-gradient(97.97deg, rgba(255, 255, 255, 0.09) 1.62%, rgba(255, 255, 255, 0.072) 100%)
		box-shadow inset 1px 1px 0px rgba(255, 255, 255, 0.14), inset -1px -1px 0px rgba(0, 0, 0, 0.07)
		backdrop-filter blur(20px)
		border-radius 22px
		padding 15px
		position relative
		z-index 3
		&.not-completed
			.roadmap-step
				&__count
					color #DCC3EA
				&__status
					background-color $inactive-color
					color #CB8A0B
					box-shadow none
		&:last-child
			margin-bottom 0
			
		&__information
			display flex
			flex-wrap nowrap
			margin-right 30px
			
		&__title
			font 20px $Bold
			margin-bottom 6px
			color $text-color
			
		&__description
			font 16px $SemiBold
			color rgba(255, 255, 255, 0.51)
			line-height 20px
			
		&__status
			flex-col-center()
			text-align center
			color $basic-white-color
			border-radius 10px
			font 16px $Bold
			width 150px
			background-color $active-color
			box-shadow 0px 4px 49px rgba($active-color, 0.75)
		&__count
			flex-col-center()
			width 70px
			height 70px
			text-align center
			
			border-radius 10px
			box-shadow 0px 4px 8px rgba(0, 0, 0, 0.21)
			color #3B0957
			font 33px $ExBold
			flex none
			margin-right 15px
			background-color $basic-white-color
	

.blockchain-wrapper
	position relative
	padding-bottom 100px
	.comet
		&-1
			bottom -1100px
			right 200px	
		&-2
			bottom -570px
			left 200px	

.blockchain-block
	margin-bottom 115px
	&:last-child
		margin-bottom 0
		
	.content
