.sect__promo
	min-height 810px
	position relative
	padding-top 110px
	padding-bottom 75px
	&:before
		pseudo()
		position absolute
		bottom -5px
		width 100%
		z-index 1
		height 150px
		background linear-gradient(180deg, rgba(72, 16, 127, 0) 0%, #48107F 86.98%)
	
	.container
		position relative
		z-index 5
		

.promo-stars
	position absolute
	top 50%
	left 50%
	margin-top -363.5px
	margin-left -638px 
	z-index 1
	width 1276px
	height 727px
	background url('../img/decor/promo-stars.svg') 50% no-repeat / contain
	
.title
	font 44px $SemiBold
	text-align center
	span
		display block
		text-transform uppercase
		font-size 114px
		line-height 1
		

.promo-block
	&__img
		position relative
		max-width 930px
		margin -60px auto 0
		img
			display block
			
		.btn
			position absolute
			horisontal-center()
			bottom -15px
			z-index 2
			
// Characters
.sect__characters
	padding 55px 0 240px
	background url('../img/decor/characters-bg.png') top 55px center no-repeat
.characters
	position relative
	padding 60px 20px 50px
	z-index 3
	
	&:before
		pseudo()
		position absolute
		z-index -1
		border-radius 40px
		fullSize()
		background rgba(0,0,0, 0.3)
		background linear-gradient(148.97deg, rgba(255, 255, 255, 0.06) 3.83%, rgba(255, 255, 255, 0.006) 100.01%)
		box-shadow 0px 4px 124px rgba(0, 0, 0, 0.15), inset 1px 2px 0px rgba(255, 255, 255, 0.13), inset -1px -2px 0px rgba(0, 0, 0, 0.1)
		backdrop-filter blur(44px)

			
	.sect-description
		margin 0 auto 40px
		max-width 660px
		
	
.character-card
	position relative
	padding 15px

	background linear-gradient(148.97deg, rgba(255, 255, 255, 0.06) 3.83%, rgba(255, 255, 255, 0.01) 100.01%)
	border-radius 40px
	&__inner
		border-radius 34px
		background linear-gradient(180deg, rgba(255, 255, 255, 0.22) 0%, rgba(255, 255, 255, 0.39) 100%)
		padding 3px
	&__img
		height 330px
		flex-col-center()
		border-radius 33px
		padding 40px 15px
		background-color $purple-bg
		backface-visibility hidden
		img
			@extends .content-img
		
	&.purple-bg
		.character-card__img
			background-color $purple-bg
	&.yellow-bg
		.character-card__img
			background-color $yellow-bg
	&.red-bg
		.character-card__img
			background-color $red-bg
	&.blue-bg
		.character-card__img
			background-color $blue-bg
	&.green-bg
		.character-card__img
			background-color $green-bg
		
	
.character-params
	width 350px
	display flex
	flex-wrap wrap
	justify-content flex-start
	margin 0 -5px -10px -5px
	position absolute
	z-index 3
	bottom 35px
	left 45px
	
.character-param
	display block
	width 50%
	padding-left 5px
	padding-right 5px
	margin-bottom 10px
	&__content
		display flex
		align-items center
		flex-wrap nowrap
		height 60px
		border-radius 12px
		padding 8.8px
		background rgba(255, 255, 255, 0.435)
		background linear-gradient(97.97deg, rgba(255, 255, 255, 0.435) 1.62%, rgba(255, 255, 255, 0.295) 100%)
		box-shadow inset 1px 1px 0px rgba(255, 255, 255, 0.14), inset -1px -1px 0px rgba(0, 0, 0, 0.07)
		backdrop-filter blur(17px)
	&__img
		flex none
		background-color $basic-white-color
		width 42px
		height 42px
		border-radius 5px
		box-shadow 0px 3px 5px rgba(0, 0, 0, 0.1)
		background-repeat no-repeat
		background-size 25px 25px
		background-position 50%
	&__value
		margin-left 15px
		color $basic-black-color
		font 18px $Bold
		line-height 1
		
.pin
	display inline-block
	width 80px
	height 80px
	background url('../img/decor/pin.svg') 50% no-repeat / contain
	position absolute
	z-index 1
	&:nth-child(1)
		top 30px
		left 30px
	&:nth-child(2)
		top 30px
		right 30px
	&:nth-child(3)
		bottom 30px
		left 30px
	&:nth-child(4)
		bottom 30px
		right 30px
		

// opportunities
.sect__opportunities
	margin-top -100px
	padding-bottom 175px
	.sect-title
		max-width 555px
		margin-left auto
		margin-right 0
		margin-bottom 0

.opportunities
	padding-left 80px
	padding-right 80px
	margin-bottom -60px
			
.opportunity
	display flex
	flex-wrap nowrap
	align-items center
	justify-content space-between
	position relative
	flex-direction row-reverse
	margin-bottom 60px
	&:last-child
		margin-top -60px
		flex-direction row
		.opportunity-text
			
			max-width calc(100% - 450px)
			display flex
			justify-content flex-end
			div
				max-width 445px
	&:nth-child(even)
		flex-direction row
		.opportunity-img
			img
				transform translate(-50%, -50%) scaleX(-1)
			&__inner
				&:before
					transform translate(-50%, -50%) scaleX(-1)
				&:after
					transform translateY(-50% ) scaleX(-1)
					left auto
					right -80px
				
			.comet
				bottom auto
				top 0
				left -20px
	&-counter
		display inline-block
		// width 115px
		// height 70px
		// background-repeat no-repeat
		// background-size contain
		// background-position 50%
		position absolute
		top -65px
		right 0
		// mix-blend-mode soft-light
		font 94px $ExBold
		color transparent
		-webkit-text-stroke-width 2px
		text-stroke-width 2px
		-webkit-text-stroke-color #7A1FBF
		text-stroke-color #7A1FBF
	&-text
		width 100%
		max-width 475px
		position relative
		z-index 3
		div
			position relative
			z-index 1
	&-img
		position relative
		flex none
		.comet
			bottom 0
			left -20px
		&:after
			pseudo()
			position absolute
			position-center()
			z-index -3
			width 994px
			height 871px
			background url('../img/decor/shine.svg') no-repeat / contain
			pointer-events none
		
	
		&__inner
			width 454px
			height 454px
			position relative
			flex none
			border-radius 50%
			background rgba(0,0,0, 0.3)
			background linear-gradient(142.53deg, rgba(255, 255, 255, 0.015) 11.8%, rgba(255, 255, 255, 0.018) 88.04%)
			backdrop-filter blur(144px)
			&:after
				pseudo()
				position absolute
				vertical-center()
				left -80px
				width 54px
				height 308px
				background url('../img/decor/scale.svg') 50% no-repeat / contain
				pointer-events none
			&:before
				pseudo()
				position absolute
				position-center()
				width 356px
				padding-top 75%
				border-radius 50%
				z-index 1
				background rgba(255, 255, 255, 0.05)
				background linear-gradient(142.53deg, rgba(255, 255, 255, 0.05) 11.8%, rgba(255, 255, 255, 0.06) 88.04%)
				box-shadow -1px 1px 1px rgba(0, 0, 0, 0.14), inset 1px 1px 1px rgba(255, 255, 255, 0.09)
				backdrop-filter blur(144px)
			img
				display block
				position absolute
				position-center()
				z-index 2
				width 330px
				height auto
			

// character 3d
.sect__character-3d
	padding-bottom 180px

	
.character-3d
	padding-left 110px
	padding-right 110px
	position relative
	z-index 1
