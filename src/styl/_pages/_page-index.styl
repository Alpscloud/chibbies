		flex 1
		padding-left 120px
		


.discord
	max-width 1000px
	margin 155px auto 0
	border-radius 40px
	border 6px solid #000DB6
	position relative
	z-index 3
	box-shadow 0px 14px 64px rgba(18, 35, 237, 0.4)
	.btn
		width auto
		max-width none
		span
			padding 20px 35px
	&-ic
		display inline-block
		width 81px
		height 81px
		position relative
		background-color $basic-white-color
		border-radius 20px
		margin-bottom 24px
		svg
			svg()
			width 46px
			height 34px
			position absolute
			position-center()
			fill $discord-color 
